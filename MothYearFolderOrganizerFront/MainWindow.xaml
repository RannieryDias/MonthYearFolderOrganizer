<Window x:Class="MothYearFolderOrganizerFront.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MothYearFolderOrganizerFront"
        mc:Ignorable="d"
        Title="Organizer" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" >
            <Button Content="Select folder" HorizontalAlignment="Center" Margin="15"  VerticalAlignment="Center" Click="Button_Click_1"/>
            <Button Content="Organize" HorizontalAlignment="Center" Margin="15" VerticalAlignment="Center" Click="Button_Click"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <TextBox x:Name="Status" HorizontalAlignment="Left" Margin="47,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="672" RenderTransformOrigin="-1.717,-9.345" Height="315"/>
        </ScrollViewer>
    </Grid>
</Window>
